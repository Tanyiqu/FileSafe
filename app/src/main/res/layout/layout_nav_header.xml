<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimenNavHeaderHeight"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/img_nav_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/view_nav_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/nav_icon"
        android:contentDescription="@string/img_content_description" />

    <View
        android:id="@+id/view_nav_bg"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_nav_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/view_nav_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_nav_bg"
        app:layout_constraintTop_toTopOf="@id/view_nav_bg"
        android:text="@string/app_version"/>

</androidx.constraintlayout.widget.ConstraintLayout>


